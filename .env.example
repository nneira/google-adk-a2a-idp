# ==============================================================================
# CONFIGURACIÓN DE GOOGLE ADK - IDP AUTO-PROVISIONING
# ==============================================================================
#
# Copia este archivo a .env y configura tus valores:
# cp .env.example .env
#
# IMPORTANTE: El archivo .env está en .gitignore (no se sube a git)
# ==============================================================================

# ------------------------------------------------------------------------------
# GEMINI API (REQUERIDO)
# ------------------------------------------------------------------------------
# Obtén tu API key gratis en: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE ORCHESTRATOR
# ------------------------------------------------------------------------------
# Nivel de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Máximo de reintentos por agente si falla
MAX_RETRIES=3

# Timeout en segundos por agente (300 = 5 minutos)
TIMEOUT_PER_AGENT=300

# Multiplicador para backoff exponencial
BACKOFF_MULTIPLIER=2

# Habilitar protocolo A2A para comunicación entre agentes
A2A_PROTOCOL_ENABLED=true

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE DEPLOYMENT
# ------------------------------------------------------------------------------
# Modo de deployment: "local" o "cloud"
DEPLOY_MODE=local

# Directorio de outputs (donde se generan archivos)
OUTPUT_DIR=/app/outputs

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE AGENTES
# ------------------------------------------------------------------------------
# Platform Architect Agent
ARCHITECT_MODEL=gemini-2.5-flash
ARCHITECT_TEMPERATURE=0.3

# Infrastructure Agent
INFRA_MODEL=gemini-2.5-flash
INFRA_TEMPERATURE=0.2

# Security Agent
SECURITY_MODEL=gemini-2.5-flash
SECURITY_TEMPERATURE=0.1
SECURITY_SCAN_TOOL=trivy
SECURITY_BLOCK_ON_CRITICAL=true

# CI/CD Agent
CICD_MODEL=gemini-2.5-flash
CICD_TEMPERATURE=0.2

# Observability Agent
OBSERVABILITY_MODEL=gemini-2.5-flash
OBSERVABILITY_TEMPERATURE=0.2
OBSERVABILITY_PROVISION_GRAFANA=true
OBSERVABILITY_PROVISION_PROMETHEUS=true

# DevEx Agent
DEVEX_MODEL=gemini-2.5-flash
DEVEX_TEMPERATURE=0.3

# Web Portal Agent
PORTAL_MODEL=gemini-2.5-flash
PORTAL_TEMPERATURE=0.3

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE MONITORING (LOCAL)
# ------------------------------------------------------------------------------
# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Prometheus
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE DEMO APP
# ------------------------------------------------------------------------------
# PostgreSQL
DB_USER=app_user
DB_PASSWORD=change-this-password-in-production
DB_NAME=app_db
DB_PORT=5432

# App
APP_ENV=local
APP_PORT=8000
METRICS_ENABLED=true

# ------------------------------------------------------------------------------
# CONFIGURACIÓN CLOUD (Solo si DEPLOY_MODE=cloud)
# ------------------------------------------------------------------------------
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1
# GCP_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE CACHE (Opcional)
# ------------------------------------------------------------------------------
# Habilitar cache de outputs de agentes
ENABLE_CACHE=false
CACHE_DIR=/tmp/adk-cache
CACHE_TTL=3600

# ------------------------------------------------------------------------------
# CONFIGURACIÓN DE DEBUG
# ------------------------------------------------------------------------------
# Guardar todos los prompts enviados a Gemini
SAVE_PROMPTS=false
PROMPTS_DIR=/app/outputs/prompts

# Modo verbose (logs muy detallados)
VERBOSE=false
